@{
    ViewData["Title"] = "Home Page";
    string mess = (string)ViewBag.mess;
}

<div class="text-center">
    <h2>Hack chuyển tiền</h2>
    <form method="post" action="http://localhost:5134/Home/Transfer">
        <label>Từ tài khoản</label>
        <input type="number" id="accountFrom" name="accountFrom" required><br><br>

        <label>Tới tài khoản</label>
        <input type="number" id="accountTo" name="accountTo" required><br><br>

        <label>Số tiền:</label>
        <input type="number" id="price" name="price" required><br><br>

        <input type="submit" value="Chuyển">
    </form>
    @if (!string.IsNullOrEmpty(mess))
    {
        <h4>@mess</h4>
    }
</div>
